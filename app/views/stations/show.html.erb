
<%= form_for @station, :url => station_path(@station) do |f| %>

  <%=link_to "返回",stations_path,:class=>"btn btn-default"%>
	<%= f.submit "儲存",:class=>"btn btn-primary"%>
  
  <div class="form-group">
		<%=f.label :name,"站點名稱:"%>
		<%=f.text_field :name%>
	</div>
  <h6>站點護士列表</h6>
  <table class="table">
  	<tr>
  		<td>員工編號</td>
  		<td>加入時間</td>
  	</tr>
  	<%@nurses.each do |n|%>
  		<tr>
  			<td><%=n.number%></td>
  			<td><%=n.created_at%></td>
  		</tr>
  	<%end%>
  </table>

<%end%>